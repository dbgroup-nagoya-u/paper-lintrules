{
    "plugins": {
        "@textlint/text": {
            "extensions": [
                ".tex"
            ]
        }
    },
    "filters": {
        "allowlist": {
            "allow": [
                "/\\$\\$[\\s\\S]*?\\$\\$/m",
                "/\\$.*?\\$/",
                "/\\{[\\s\\S]*?\\}/",
                "/\\[[\\s\\S]*?\\]/",
                "/(?<!\\\\)%.*/" // 実用上困らないのでOK "/(?<=(?<!\\\\)(\\\\{2})*%).*/" だと可変長後読みが原因で時間がとてもかかってしまう。
            ]
        }
    },
    "rules": {
        "preset-ja-technical-writing": {
            "ja-no-mixed-period": false,
            "ja-unnatural-alphabet": false,
            "max-kanji-continuous-len": false,
            "sentence-length": {
                "max": 100,
                "exclusionPatterns": [
                    "/\\$.*?\\$/",
                    "/\\{.*?\\}/",
                    "/（.*?）/"
                ]
            }
        },
        "preset-jtf-style": {
            "1.2.1.句点(。)と読点(、)": false,
            "1.2.2.ピリオド(.)とカンマ(,)": false,
            "3.1.1.全角文字と半角文字の間": false
        },
        "prh": {
            "rulePaths": [
                "./WEB+DB_PRESS.yml",
                "./techbooster.yml",
                "./typo.yml"
            ]
        }
    }
}
